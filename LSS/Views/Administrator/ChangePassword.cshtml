
@{
    ViewData["Title"] = "ChangePasswordView";
    Layout = "_AdminIndexLayout";
}


<div class="container" style="opacity: 0.6;">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">
            <ul class="short_ls">
                <li>
                    <a asp-controller="Administrator" asp-action="Index">首页</a>
                    <span>| |</span>
                </li>
                <li>修改密码</li>
            </ul>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 15px;">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-success leftSidebar" id="leftSidebar">
                <div class="panel-heading">
                    <h3 class="panel-title">快捷菜单</h3>
                </div>
                <div class="panel-body">
                    <a id="" asp-controller="Administrator" asp-action="Index" class="list-group-item">返回首页</a>
                    <a id="" href="" class="list-group-item">查看学生信息</a>
                    <a id="" asp-controller="Administrator" asp-action="ChangePassword" class="list-group-item">密码修改</a>
                    <a id="" asp-controller="Administrator" asp-action="GetOrderById" class="list-group-item">查询预订信息</a>
                    <a id="" asp-controller="Administrator" asp-action="ReferSeatByIdView" class="list-group-item">查询座位</a>
                    <a id="top" href="" class="list-group-item">回到顶部</a>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="container" id="studentInformation">
                <div class="page-header" style="margin-top: 15px;">
                    <h1><small>个人信息</small></h1>
                </div>
                <div class="informationDetail">
                    <form class="form-horizontal" asp-controller="Administrator" asp-action="ChangePassword" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">旧密码</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="oldpassword" maxlength="" minlength="" id="oldpassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">新密码</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="newpassword" maxlength="" minlength="" id="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">确认密码</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control auth" maxlength="" minlength=""
                                       id="repassword">
                            </div>
                            <span class="col-sm-2" id="pwdError">两次密码不一致!</span>
                        </div>
                        <div class="submitInformation" style="margin-top: 50px;">
                            <div class="col-sm-4"></div>
                            <button type="submit" id="submitBtn" class="btn btn-success col-sm-4">
                                确认修改
                            </button>
                            <div class="col-sm-4"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/numscroller-1.0.js"></script>
<script src="~/js/jquery.flexisel.js"></script>
<script src="~/js/SmoothScroll.min.js"></script>
<script src="~/js/move-top.js"></script>
<script src="~/js/easing.js"></script>
<script src="~/js/studentIndex.js"></script>
<script src="~/js/studentModifyPwd.js"></script>


